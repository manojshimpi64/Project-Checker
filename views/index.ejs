<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website Check Tool</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light py-5">
    <div class="container-fluid">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="text-center mb-4">Code Checker</h1>
          <form id="checkForm" action="/check" method="POST">
            <div class="mb-3">
              <label for="directoryPath" class="form-label"
                >Directory Path:</label
              >
              <input
                type="text"
                class="form-control"
                id="directoryPath"
                name="directoryPath"
                required
              />
            </div>

            <fieldset class="mb-3">
              <legend class="col-form-label">Check Type:</legend>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="checkAll"
                  name="checkType"
                  value="project"
                  required
                />
                <label class="form-check-label" for="checkAll"
                  >Full Project</label
                >
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="checkSingle"
                  name="checkType"
                  value="single"
                  required
                />
                <label class="form-check-label" for="checkSingle"
                  >Single File</label
                >
              </div>
            </fieldset>

            <div class="mb-3" id="fileInputGroup" style="display: none">
              <label for="pageName" class="form-label">Page Name(s):</label>
              <input
                type="text"
                class="form-control"
                id="pageName"
                name="pageName"
                placeholder="e.g., file1.html, file2.js"
              />
              <small class="form-text text-muted"
                >Separate multiple files with commas</small
              >
            </div>

            <div class="mb-3">
              <label for="checkOptions" class="form-label">Select Check:</label>
              <select
                class="form-select"
                id="checkOptions"
                name="checkOption"
                required
              >
                <option value="">-- Choose Check Type --</option>
                <option value="missingAltTags">Missing Alt Tags</option>
                <option value="brokenLinks">Broken Links</option>
                <option value="missingFooter">Missing Footer</option>
                <option value="globalVariableMissing">
                  Global Variable Usage
                </option>
              </select>
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/" class="btn btn-danger" onclick="resetForm()">Reset</a>
            </div>
          </form>

          <div id="loader" class="text-center my-4" style="display: none">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Checking files, please wait...</p>
          </div>

          <% if (message) { %>
          <div class="alert alert-danger mt-3"><%= message %></div>
          <% } %> <% if (warnings && warnings.length > 0) { %>
          <h3 class="mt-4">Errors Found: <%= warningCount %></h3>
          <div class="table-responsive mt-2">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th>File Path</th>
                  <th>File Name</th>
                  <th>Line</th>
                  <th>Type</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                <% warnings.forEach((w, i) => { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= w.filePath %></td>
                  <td><%= w.fileName %></td>
                  <td><%= w.lineNumber %></td>
                  <td><%= w.type %></td>
                  <td><%= w.message %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      document
        .getElementById("checkSingle")
        .addEventListener("change", function () {
          document.getElementById("fileInputGroup").style.display = "block";
        });

      document
        .getElementById("checkAll")
        .addEventListener("change", function () {
          document.getElementById("fileInputGroup").style.display = "none";
        });

      function resetForm() {
        document.getElementById("checkForm").reset();
        document.getElementById("fileInputGroup").style.display = "none";
        document.getElementById("loader").style.display = "none";
      }

      // Show loader on form submit
      document
        .getElementById("checkForm")
        .addEventListener("submit", function () {
          document.getElementById("loader").style.display = "block";
        });
    </script>
  </body>
</html>

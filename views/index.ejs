<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website Check Tool</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light py-5">
    <div class="container-fluid">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="text-center mb-4">Code Checker</h1>
          <form id="checkForm" action="/check" method="POST">
            <div class="mb-3">
              <label for="directoryPath" class="form-label"
                >Enter Directory Path:</label
              >
              <input
                type="text"
                class="form-control"
                id="directoryPath"
                name="directoryPath"
                required
              />
            </div>

            <fieldset class="mb-3">
              <legend class="col-form-label">Choose Check Type:</legend>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="checkAll"
                  name="checkType"
                  value="project"
                  required
                />
                <label class="form-check-label" for="checkAll"
                  >Check All Project Files</label
                >
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="checkSingle"
                  name="checkType"
                  value="single"
                  required
                />
                <label class="form-check-label" for="checkSingle"
                  >Check Single File</label
                >
              </div>
            </fieldset>

            <div class="mb-3" id="fileInputGroup" style="display: none">
              <label for="pageName" class="form-label"
                >Enter Page Name(s):</label
              >
              <input
                type="text"
                class="form-control"
                id="pageName"
                name="pageName"
                placeholder="e.g., file1.js, file2.js"
              />
              <small class="form-text text-muted">
                For multiple files, separate by commas (e.g., file1.js,
                file2.js, file3.html, file.php)
              </small>
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/" class="btn btn-danger" onclick="resetForm()">Reset</a>
            </div>
          </form>

          <% if (message) { %>
          <div class="alert alert-danger mt-3"><%= message %></div>
          <% } %> <% if (warnings && warnings.length > 0) { %>
          <h3 class="mt-4">Errors Found: <%= warningCount %></h3>
          <div class="table-responsive mt-2 col-md-12 col-lg-12">
            <table class="table table-striped table-bordered mt-2">
              <thead>
                <tr>
                  <th>Sr.No</th>
                  <th>File Path</th>
                  <th>File Name</th>
                  <th>Line Number</th>
                  <th>Error Type</th>
                  <th>Error Message</th>
                </tr>
              </thead>
              <tbody>
                <% warnings.forEach((warning, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= warning.filePath %></td>
                  <td><%= warning.fileName %></td>
                  <td><%= warning.lineNumber %></td>
                  <td><%= warning.type %></td>
                  <td><%= warning.message %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      document
        .getElementById("checkSingle")
        .addEventListener("change", function () {
          document.getElementById("fileInputGroup").style.display = "block";
        });

      document
        .getElementById("checkAll")
        .addEventListener("change", function () {
          document.getElementById("fileInputGroup").style.display = "none";
        });

      function resetForm() {
        document.getElementById("checkForm").reset();
        document.getElementById("fileInputGroup").style.display = "none";
      }
    </script>
  </body>
</html>

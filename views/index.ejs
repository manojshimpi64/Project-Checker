<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website Check Tool</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f4f4f9;
        padding: 20px;
        margin: 0;
        display: flex;
        justify-content: center;
      }
      h1 {
        text-align: center;
        color: #333;
      }
      .form-container {
        max-width: 1300px;
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
      }
      .form-container input,
      .form-container select,
      .form-container button {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 16px;
      }
      .form-container input:focus,
      .form-container select:focus,
      .form-container button:focus {
        border-color: #007bff;
        outline: none;
      }
      .form-container button {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        cursor: pointer;
      }
      .form-container button:hover {
        background-color: #0056b3;
      }
      .form-container .reset-button {
        background-color: #f44336;
        color: white;
        font-weight: bold;
        cursor: pointer;
        text-align: center;
        display: inline-block;
        text-decoration: none;
        padding: 12px 16px;
        width: auto;
        border-radius: 5px;
      }
      .form-container .reset-button:hover {
        background-color: #d32f2f;
      }
      .form-container label {
        font-weight: bold;
        display: block;
      }
      .form-container small {
        font-size: 12px;
        color: #555;
        display: block;
      }
      .error-message {
        color: red;
        font-size: 14px;
        margin-top: 10px;
        font-weight: bold;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 14px;
      }
      table,
      th,
      td {
        border: 1px solid #ddd;
      }
      th,
      td {
        padding: 12px;
        text-align: left;
        font-size: 14px;
      }
      th {
        background-color: #f4f4f4;
        color: #333;
        font-weight: bold;
      }
      tr:nth-child(even) {
        background-color: #fafafa;
      }
      tr:hover {
        background-color: #f1f1f1;
      }
      /* Media Query for responsive design */
      @media (max-width: 768px) {
        .form-container {
          padding: 15px;
        }
        .form-container input,
        .form-container select,
        .form-container button {
          font-size: 14px;
        }
      }

      /* Inline radio buttons */
      .inline-radio label {
        margin-right: 20px;
      }
    </style>
  </head>
  <body>
    <div class="form-container">
      <h1>Website Check Tool</h1>
      <form id="checkForm" action="/check" method="POST">
        <label for="directoryPath">Enter Directory Path:</label>
        <input type="text" id="directoryPath" name="directoryPath" required />

        <!-- Radio buttons to select check type (inline) -->
        <label for="checkType">Choose Check Type:</label>
        <div class="inline-radio">
          <input
            type="radio"
            id="checkAll"
            name="checkType"
            value="project"
            required
          />
          <label for="checkAll">Check All Project Files</label>

          <input
            type="radio"
            id="checkSingle"
            name="checkType"
            value="single"
            required
          />
          <label for="checkSingle">Check Single File</label>
        </div>

        <!-- Input for file names (only visible when single file is selected) -->
        <label for="pageName" id="fileLabel" style="display: none"
          >Enter Page Name(s):</label
        >
        <input
          type="text"
          id="pageName"
          name="pageName"
          style="display: none"
          placeholder="e.g., file1.js, file2.js"
        />
        <small style="display: none">
          For multiple files, separate by commas (e.g., file1.js,
          file2.js,file3.html,file.php)
        </small>

        <button type="submit">Submit</button>

        <!-- Reset button with a class (using <a> tag) -->
        <a href="/" class="reset-button" onclick="resetForm()">Reset</a>
      </form>

      <% if (message) { %>
      <div class="error-message"><%= message %></div>
      <% } %> <% if (warnings && warnings.length > 0) { %>
      <h3>Errors Found:</h3>
      <table>
        <thead>
          <tr>
            <th>Sr.No</th>
            <th>File Path</th>
            <th>File Name</th>
            <th>Line Number</th>
            <th>Error Type</th>
            <th>Error Message</th>
          </tr>
        </thead>
        <tbody>
          <% warnings.forEach((warning, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= warning.filePath %></td>
            <td><%= warning.fileName %></td>
            <td><%= warning.lineNumber %></td>
            <!-- Line number added here -->
            <td><%= warning.type %></td>
            <td><%= warning.message %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>

    <script>
      // Show input for file names when "Check Single File" is selected
      document
        .getElementById("checkSingle")
        .addEventListener("change", function () {
          document.getElementById("fileLabel").style.display = "block";
          document.getElementById("pageName").style.display = "block";
          document.querySelector("small").style.display = "block";
        });

      // Hide input for file names when "Check All Project Files" is selected
      document
        .getElementById("checkAll")
        .addEventListener("change", function () {
          document.getElementById("fileLabel").style.display = "none";
          document.getElementById("pageName").style.display = "none";
          document.querySelector("small").style.display = "none";
        });

      // Reset form function
      function resetForm() {
        document.getElementById("checkForm").reset();
        document.getElementById("fileLabel").style.display = "none";
        document.getElementById("pageName").style.display = "none";
        document.querySelector("small").style.display = "none";
      }
    </script>
  </body>
</html>
